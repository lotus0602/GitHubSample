<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_92</item>
        <item name="colorPrimaryVariant">@color/black_92</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_92</item>
        <!-- Customize your theme here. -->

        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubSample</item>

    </style>
</resources>